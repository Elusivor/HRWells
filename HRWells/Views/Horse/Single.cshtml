@model HRWells.Models.Horse
@{
    ViewBag.Title = "Single";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h2>@Model.Name</h2>
<table width="100%" class="table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
        </tr>
    </thead>
    <tr>
        <td>@Html.LabelFor(m => m.Number)</td>
        <td>@Model.Number.ToString()</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Owner)</td>
        <td>@Model.Owner</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Weight)</td>
        <td>@Model.Weight.ToString()</td>
    </tr>
</table>
@Html.ActionLink(" Back To List",
    "Index",
    null,
    new {
        @class = "btn btn-primary fa fa-backward"
    })
@Html.ActionLink(" Edit",
    "Edit",
    null,
    new {
        @class = "btn btn-warning fa fa-edit"
    })
@Html.ActionLink(" Delete",
    "Delete",
    "Horse",
    new {
        id = Model.ID
    },
    new {
        @class = "btn btn-danger fa fa-trash",
        onclick = "return confirm('Are you sure you want to delete this item?');"
    })