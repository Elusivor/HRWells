@model HRWells.Models.Track
@{
    ViewBag.Title = "Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_StyleLinks")
@Html.Partial("_DeleteDialog")

<body>
    <h2>@Model.Name</h2>
    <table class=" table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.LabelFor(m => m.Name)</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.NumberOfLanes)</td>
            <td>@Model.NumberOfLanes.ToString()</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Distance)</td>
            <td>@Model.Distance.ToString()</td>
        </tr>
    </table>

    <button class="btn btn-primary fa fa-backward" onclick="location.href='@Url.Action("Index", "Horse")';return false;"> Back To List</button>
    <button class="btn btn-warning fa fa-edit" data-href="@Url.Action("Edit", "Horse", new { ID = Model.ID})"> Edit Record</button>
    <button class="btn btn-danger fa fa-trash" data-href="@Url.Action("Delete", "Horse", new { ID = Model.ID})" data-toggle="modal" data-target="#confirm-delete"> Delete Record</button>

</body>
@Html.Partial("_DeleteScript")