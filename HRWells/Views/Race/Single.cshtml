@model HRWells.Models.Entry
@{
    ViewBag.Title = "Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Partial("_StyleLinks")
@Html.Partial("_DeleteDialog")

<h2>Race #@Model.Race.TrackID</h2>
<table class="table table-striped table-bordered">
    <colgroup>
        <col width="33.33%" />
        <col width="33.33%" />
        <col width="33.33%" />
    </colgroup>
    <tr>
        <th>Race Date:</th>
        <th>Track:</th>
        <th># Lanes:</th>
    </tr>
    <tr>
        <td>@Model.Race.TOD</td>
        <td>@Model.Race.Track.Name</td>
        <td>@Model.Race.Track.NumberOfLanes</td>
    </tr>
</table>

<table class="table table-striped table-bordered">
    <colgroup>
        <col width="25%" />
        <col width="25%" />
        <col width="25%" />
        <col width="25%" />
    </colgroup>
    <thead>
        <tr>
            <th>Lane Number:</th>
            <th>Horse Name:</th>
            <th>Jockey Name:</th>
            <th>Betting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entries)
        {
            <tr>
                <td>@item.LaneNr</td>
                <td>@item.Horse.Name</td>
                <td>@item.Jockey.Name</td>
                <td class="btn btn-warning" OnClick="location.href = '@Url.Action("index", "Race", null)'" style="display:flex;">Bet on "@item.Horse.Name"</td>
            </tr>
        }
    </tbody>
</table>

<table class="table">
    <colgroup>
        <col width="33%" />
        <col width="33%" />
        <col width="33%" />
    </colgroup>
    <tr>
        <td>
            <a class="btn btn-primary fa fa-backward Nav-controls" onclick="location.href='@Url.Action("Index", "Race")';return false;"> Back To List</a>
        </td>
        <td>
            <a class="btn btn-warning fa fa-edit Nav-controls" data-href="@Url.Action("Edit", "Race", new { ID = Model.ID})"> Edit Record</a>
        </td>
        <td>
            <a class="btn btn-danger fa fa-trash Nav-controls" data-href="@Url.Action("Delete", "Race", new { ID = Model.ID})" data-toggle="modal" data-target="#confirm-delete">Delete Record</a>
        </td>
    </tr>
</table>
@section Scripts{
    @Html.Partial("_DeleteScript")
}