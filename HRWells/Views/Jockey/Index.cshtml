@model IEnumerable<HRWells.Models.Jockey>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Table of Jockeys</h2>
<p>Last updated @DateTime.Now</p>

@if(Model.Count() > 0)
{
    <table width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th class="text-center">Weight</th>
                <th class="text-center">Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jockey in Model)
            {
                <tr>
                    <td>@jockey.Name</td>
                    <td class="text-center">@jockey.Weight kg</td>
                    <td class="text-center">@jockey.Age</td>
                </tr>
            }
        </tbody>
    </table>
}
